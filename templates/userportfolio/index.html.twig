{% extends 'base.html.twig' %}

{% block title %}Userportfolio index{% endblock %}

{% block body %}
    <h1>Userportfolio index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for userportfolio in userportfolios %}
            <tr>
                <td>{{ userportfolio.id }}</td>
                <td>{{ userportfolio.nombre }}</td>
                <td>{{ userportfolio.email }}</td>
                <td>{{ userportfolio.descripcion }}</td>
                <td>
                    <a href="{{ path('app_userportfolio_show', {'id': userportfolio.id}) }}">show</a>
                    <a href="{{ path('app_userportfolio_edit', {'id': userportfolio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_userportfolio_new') }}">Create new</a>
{% endblock %}
